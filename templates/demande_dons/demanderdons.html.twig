                        <!-- Formulaire de transfert de points (masqué par défaut) -->
<div class="modal fade" id="myModal{{ demande.idDemande }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
