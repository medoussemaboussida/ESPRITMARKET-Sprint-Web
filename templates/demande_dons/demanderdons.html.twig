    <!-- JavaScript pour gérer l'affichage du modal -->
    <script>
        $(document).ready(function() {
            // Gérer le clic sur le lien "Transférer des points"
            $('.read-more-btn').click(function(e) {
                e.preventDefault(); // Empêcher le comportement par défaut du lien
                var idDemande = $(this).data('demande-id');
                $('#myModal' + idDemande).show();
            });

            // Gérer la soumission du formulaire de transfert de points
            $('[id^="submitForm"]').click(function(e) {
                e.preventDefault(); // Empêcher le comportement par défaut du formulaire
                var idDemande = $(this).attr('id').replace('submitForm', '');
                var userId = $('#userId').val();
                var donPoints = $('#donPoints' + idDemande).val();

                $.ajax({
                    url: '/transfer_points', // Remplacez par l'URL de votre route Symfony
                    method: 'POST',
                    data: {
                        userId: userId,
                        donPoints: donPoints,
                        idDemande: idDemande
                    },
                    success: function(response) {
                        if (response.success) {
                            alert('Points transférés avec succès.');
                            $('#pointsDemande' + idDemande).text(response.newPoints);
                            $('#myModal' + idDemande).hide(); // Masquer la fenêtre modale
                        } else {
                            alert('Erreur: ' + response.message);
                        }
                    },
                    error: function(xhr, status, error) {
                        alert('Erreur: ' + error);
                    }
                });
            });

            // Gérer le clic sur le bouton de fermeture du modal
            $('.close').click(function() {
                $(this).closest('.modal').hide();
            });

            // Gérer le clic en dehors du contenu du modal pour le fermer
            $(window).click(function(event) {
                if ($(event.target).hasClass('modal')) {
                    $(event.target).hide();
                }
            });
        });
    </script>



