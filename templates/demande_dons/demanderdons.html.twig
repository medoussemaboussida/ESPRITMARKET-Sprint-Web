                    <span aria-hidden="true">&times;</span>
                </button>
                <h2 class="modal-title" id="myModalLabel">Transférer des points</h2>
            </div>
            <div class="modal-body">
                <form id="transferForm{{ demande.idDemande }}">
                    <label for="donPoints">Nombre de points à transférer :</label>
                    <input type="number" id="donPoints{{ demande.idDemande }}" name="donPoints" required><br><br>
                    <div id="errorMessage{{ demande.idDemande }}" style="color: red;"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                <button type="button" id="submitForm{{ demande.idDemande }}" class="btn btn-primary">Transférer</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var myModal = new bootstrap.Modal(document.getElementById('myModal{{ demande.idDemande }}'));

        $('.read-more-btn').click(function(e) {
            e.preventDefault();
            myModal.show();
        });
         
        $('#submitForm{{ demande.idDemande }}').click(function(e) {
            e.preventDefault();
    // Gérer la soumission du formulaire de transfert de points
    $('[id^="submitForm"]').click(function(e) {
        e.preventDefault(); // Empêcher le comportement par défaut du formulaire
        var idDemande = $(this).attr('id').replace('submitForm', '');
        var donPoints = $('#donPoints' + idDemande).val();

        // Récupérer l'identifiant de l'utilisateur à partir de l'URL
        var userId = window.location.pathname.split('/').pop(); // Récupérer le dernier segment de l'URL

        $.ajax({
            url: '/transfer_points/' + userId, // Utiliser l'URL avec l'ID de l'utilisateur
            method: 'POST',
            data: {
                donPoints: donPoints,
                idDemande: idDemande
            },
            success: function(response) {
                if (response.success) {
                    alert('Points transférés avec succès.');
                    $('#pointsDemande' + idDemande).text(response.newPoints);
                    $('#myModal' + idDemande).hide(); // Masquer la fenêtre modale
                    // Rafraîchir la page après le transfert réussi
                    window.location.reload();
                } else {
                    // Afficher le message d'erreur dans l'élément errorMessage
                    $('#errorMessage' + idDemande).text(response);
                }
            },
            error: function(xhr, status, error) {
                // Afficher le message d'erreur dans l'élément errorMessage
                $('#errorMessage' + idDemande).text('Erreur: ' + xhr.responseText); 
            }
        });
    });

    // Gérer le clic sur le bouton de fermeture du modal
    $('.close').click(function() {
        $(this).closest('.modal').hide();
    });
            myModal.hide();
        });
    });
</script>



