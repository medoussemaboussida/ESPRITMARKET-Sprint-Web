<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Liste des Publications</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        h1 {
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid black;
            padding: 8px;
        }
    </style>
</head>
<body>
    {% for monthYear, publications in publicationsByMonth %}
        <h1>Publications de {{ monthYear }}</h1>
        <table>
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                {% for publication in publications %}
                    <tr>
                        <td>{{ publication.getTitrePublication() }}</td>
                        <td>{{ publication.getDescription() }}</td>
                        <td>{{ publication.getDatePublication() ? publication.getDatePublication()|date('Y-m-d') : '' }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endfor %}
</body>
</html>
