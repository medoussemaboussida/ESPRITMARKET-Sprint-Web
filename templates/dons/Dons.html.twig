    <h1>Liste des dons</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre de points</th>
            <th>Date d'ajout</th>
            <th>État du don</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% set totalPoints = 0 %}
        {% for don in dons %}
            <tr>
                <td >{{ don.nbPoints }}</td>
                <td>{{ don.dateAjout | date('Y-m-d H:i:s') }}</td>
                <td>{{ don.etatStatutDons }}</td>
                <td>
				        {% if don.getEtatstatutdons() != 'reçu' %}

                    <!-- Icône pour modifier -->
<a href="{{ path('edit_don', {'id': don.idDons}) }}"><i class="fas fa-edit"></i></a>

                    
                    <!-- Icône pour supprimer -->
<a href="#" class="delete-link" data-toggle="modal" data-target="#confirmDeleteModal-{{ don.idDons }}">
    <i class="fas fa-trash"></i>
</a>

<!-- Modal de confirmation de suppression -->
<div class="modal fade" id="confirmDeleteModal-{{ don.idDons }}" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmation de suppression</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Êtes-vous sûr de vouloir supprimer ce don ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <!-- Formulaire de suppression -->
                <form action="{{ path('don_delete', {'id': don.idDons}) }}" method="post">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ don.idDons) }}">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>


                </td>
				{% else %}
